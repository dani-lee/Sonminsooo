@charset "UTF-8";
body{
	background: #fafafa;
	font-family: 'Gothic A1', sans-serif;
	height: 100%;
}

.logoarea{
	margin: auto;
}

.logoarea img{
	width:250px;
	height: 70px;

	display: block;
    margin: auto;
    margin-top: 50px;
    margin-bottom: 30px;
}
.area{
 	background: #fafafa;
	width : 380px;
	height: 550px;
	margin: auto;
	
}
.join{
	height: 550px;

	border: 1px solid #dbdbdb;
	border-radius: 1px;
	background: white;
	margin-top: 100px;
}

.joinform{
 	width: 380px; 
}
.h2{
	margin : auto;
	margin-bottom : 25px;
	font-size: 18px;
    font-weight: 600;
    line-height: 20px;
	text-align: center;
	color: #8e8e8e;
}
.joininput{ /*div*/
	width : 275px;
	height : 45px;
	
    background: #fafafa;
	border: 1px solid #dbdbdb;
	border-radius: 5px;
    
    margin:12px auto 0;
    /* margin-bottom: 10px; */
    
}
.joininput input{
	width: 100%;
	height: 25px;
	padding: 14px 0 2px 8px!important; 
	
	display:block;
	
    background: #fafafa;
    border: 0;
	margin: 0;
	 

	/* box-sizing:border-box; 
  	padding:20px 10px 0; 
  	width:100%; 
  	height:100%; 
  	border: 0 none; 
  	color:#595f63; 
  	outline:none; 
  	font-size: 16px; */

}
.joininput input:focus{ 
	outline:1px solid #dbdbdb; 
}

.joininput label{
	display: flex;
	position: relative;
	color: #8e8e8e;

	/* position:absolute; 
  	left:5px; 
  	bottom:8px;
  	width:95%; 
 	height:100%; 
  	text-align:left; 
  	pointer-events:none;  */
	
}
.joininput span{ /*input안 글씨*/
    font-size: 12px;
	left:8px;
    line-height: 36px;
	height: 36px;
	position: absolute; 
/* 	
	color: #8e8e8e;
	position:absolute; 
  	left:0; 
  	bottom:5px; 
  	transition:all .3s ease; 
  	font-size: 14px;
  	padding-left: 3px; */

}

/* .btnarea{
	margin: auto;
} */
.joinform button{ /*가입버튼*/
	width : 270px;
	height :35px;
	
	background-color: #0095F6;
	color: #fafafa;
	border : 0;
	border-radius: 5px;

	margin-left: 54px;
	margin-top: 10px;
}

.joinform button[disabled]{
	background-color : rgba(var(--d69,0,149,246),.3);
}

.login{
	width : 377px;
	height :70px;
	
	background: white;
	border: 1px solid #dbdbdb;
	border-radius: 1px;
	
	margin-top: 12px;
}

.login p{
	font-size: 14px;
    text-align: center;
    
    margin: 20px;
}

/* 로그인 링크 */
.login a, .login a:hover,.login a:active, .login a:visited{
	color: #0095f6;
	text-decoration: none;
}

#chkicon #valid{ 
	font-size: 28px;
	color:lightgray;
	margin:auto; 
	margin-top: 15px; 
	margin-bottom: 15px; 
	margin-right: 10px;
	display:none;
	float:right;
}

#chkicon #invalid{ 
	font-size: 28px;
	color:red;
	margin:auto; 
	margin-top: 15px; 
	margin-bottom: 15px; 
	margin-right: 10px;
	display:none; 
	float:right;
}

.joininput input:focus + label span, 
.joininput input:valid + label span { 
  transform:translateY(-80%); 
  font-size:10px; 
   }  /* input에 글을 입력하고 포커스가 지나간 상태에서 제어하려면 valid 선택자를 써야한다. */
/* 포커스 될 때 label span(name)이 위로 올라감 */
.joininput input:focus + label::after,
.joininput input:valid + label::after { width:100%; transform:translateX(0); } 

