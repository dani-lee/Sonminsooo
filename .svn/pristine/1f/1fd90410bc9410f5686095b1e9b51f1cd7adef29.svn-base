@charset "UTF-8";
#board_content, #board_content:active{
	border: none;
}
 .btnIcon{
 	border: 0;
 	background: none;
 	padding: 0px;
 }
#content_space{
	height: 130px;
}

#uploadBoard a, #uploadBoard a:hover, #uploadBoard a:active{
	color: #fff;
	text-decoration: none;
	font-weight: bold;
}
#content{
	width: 100%;
	height: 430px;
}
#input_content{
	height: 550px;
}
#writeModal  table{
 	width: 100%;
 	height: 100%;
 	border: none;
 	border-collapse: collapse;
}
 #writeModal label {
    display: inline-block;
    padding: 5px 10px;
    color: #fff;
    vertical-align: middle;
    background-color: rgb(0,162,255);
    border-radius: 5px;
    cursor: pointer;
    height: 32px;
    margin-left: 10px;
    margin-bottom: 3%;
}
label[for=submit]{
	display: inline-block;
    padding: 5px 10px;
    color: #fff;
    vertical-align: middle;
    text-align: center;
    background-color: rgb(0,162,255);
    border-radius: 5px;
    cursor: pointer;
    height: 32px;
    margin-left: 10px;
    width: 400px;
    
}
 #writeModal input[id="location_content"], input[id="location_content"]:focus{
 width: 100%;
 height: 30px;
 border: none;
}
#input_file{
	height: 500px;
}
.modal-body{
	
	margin:10px;
}
/* ---------------여기---------- */
 #writeModal default_img{
 	width: 120px;
 	height: 120px;
 	margin-left: 40%;
 	margin-top: 18%;
 }
 .modal-body img{
 	width: 120px;
 	height: 120px;
 	margin-left: 40%;
 	margin-top: 30%;
 }
/* -------- 여기까지 --------------*/
#other{
	height: 80px;
} 
 #writeModal #input_pic{
 	text-align: center;
 } 

 #input_pic img{
 	margin: 0;
 } 
 
#writeModal  h4, h3{
 	text-align: center;
 	font-weight: bold;
 }
 #writeModal input[type="file"], #writeModal input[type="submit"]{
    position: absolute;
    width: 0;
    height: 0;
    padding: 0;
    overflow: hidden;
    border: 0;
}
#writeModal input[name="location"]{
	position: absolute;
    width: 0;
    height: 0;
    padding: 0;
    overflow: hidden;
    border: 0;
}
#here_in{
	overflow: auto;
	height: 60px;
}
#writeModal #uploadFile{
 	height: 400px;
}
#writeModal form{
	margin-bottom: 0px;
}
#writeModal #picture_space{
	width: 50%;
	height: 80%;
}
#uploadBoard{
	display: inline-block;
	color: #fff;
	vertical-align: middle;
	text-align: center;
    background-color: rgb(0,162,255);
    border-radius: 5px;
    cursor: pointer;
    height: 37px;
    width: 90%;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 20%;
    margin-bottom: 10px;
}
#writeModal .same{
	width: 30%;
	height: 40px;
}
#writeModal select[name=post_kind]{
	width: 85%;
	height: 30px;
}
#there_in{
	height: 60px;
	overflow: auto;
}
#profile_pic img{
	width: 25px;
	height: 25px;
	padding:0px;
}