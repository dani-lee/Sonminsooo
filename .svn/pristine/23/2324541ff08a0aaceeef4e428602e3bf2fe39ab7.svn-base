@charset "UTF-8";
/* 박소현이 추가한거 */
.plzplz{
/*   overflow-y: scroll; */
}
.dropdown{
  position : relative;
  display : inline-block;
/*   overflow-y: scroll; */
/*   height : 300px; */
/*   max-height:300px; */
}
.dropbtn{
  border : 1px solid rgb(37, 37, 37);
  border-radius : 4px;
  background-color: #f5f5f5;
  text-align: left;
  cursor : pointer;
  font-size : 12px;
}
.dropdown-content{
  display : none;
  position : absolute;
  left : -460px;
  top : 38px;
  z-index : 1; /*다른 요소들보다 앞에 배치*/
  background-color: white;
  border-radius:10px;
  min-width : 520px;
  max-height:300px;
  min-height : 300px;
  overflow-y: scroll;
  padding: 0;
  box-shadow: 2px -2px 4px 0px rgb(239,239,239);
}
.dropdown-content a{
  display : block;
  text-decoration : none;
  color : rgb(37, 37, 37);
  font-size: 12px;
  padding : 12px 20px;
}
.dropdown-content .EBD{
  padding-bottom: 0;
  font-weight: bold;
}
.dropdown-content .EJHD{
  padding-bottom: 0;
  border-top : 1px solid #dbdbdb;
  font-weight: bold;
}

/* alarm detail */
#alarmLi{
  border : none;
  background: white;
/*   background: blue; */
  list-style:none;
  padding-left:0px;
  padding-top: 0;
  border-radius: 10px;
}
.EBD, .EJHD{
  list-style:none;
}
#alarmLi div{
  display : inline-block;
}
.alarmAll{
  width: 100%;
  height: 50px;
}
.alarmImg{
  width : 40px;;
  height : auto;

  margin: 10px;
  padding: 0;
}
.alarmImg Img{
  width : 40px;
  height : 40px;
  border-radius: 70%;
}
.alarmContent{
  width : 350px;
  height : auto;
  margin-left: 7px;
}
.alarmContent .alarmId{
  font-weight: bold;
}
.alarmContent .alarmTime{
  color : #a3a3a3;
}
.alarmAll img{
  width: 40px;
  height: 40px;
  margin-left: 7px;
}